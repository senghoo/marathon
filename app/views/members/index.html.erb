<%- model_class = Member -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<% @members.each do |member| %>
    <div class="row">
        <div class="col-md-4">
            <div class="thumbnail">
                <%= image_tag member.github_avatar_url, alt: member.name, class:'github_avatar' %>
                <div class="caption">
                    <h3> <%= member.name %> </h3>
                    <p>
                        <%= link_to "Github", member.home %>
                    </p>
                    <p> Current Streak: <%= member.current_streak %> </p>
                    <p> Max Streak: <%= member.max_streak %> </p>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <%= member.svg.html_safe %>
        </div>
    </div>
<% end %>
